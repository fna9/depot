.page-header
  %h1 Авторизация

=form_tag login_path do
  .form-group
    =label_tag :email, User.human_attribute_name(:email)
    =email_field_tag :email, nil, class: 'form_control'
  .form-group
    =label_tag :password, User.human_attribute_name(:password)
    =password_field_tag :password, nil, class: 'form_control', require: true
  .actions=submit_tag "Войти", class: "btn btn-primary"