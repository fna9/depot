    %ul.nav.navbar-nav.navbar-right
      -if @current_user.blank?
        %li= link_to "Регистрация",  new_user_path
        %li=link_to 'Войти', login_path
      -else

        %li
          %span.navbar-text
            =(@current_user.email).to_s.split("@").first

            =link_to 'Выйти', logout_path

