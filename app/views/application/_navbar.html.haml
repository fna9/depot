%nav.navbar.navbar-default
  .container
    .navbar-header
      =link_to ?#, class: "navbar-toggle colapsed", data:{toggle: "collapsed", target: "#menu"} do
        =fa_icon 'bars'
      =link_to "Магазин", root_path, class: "navbar-brand"
    #menu
      .collapse.navbar-collapse


    %ul.nav.navbar-nav
      %li= link_to "Все товары", products_path
